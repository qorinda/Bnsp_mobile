<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ListCashflow">

    <ImageView
        android:id="@+id/imageKategori"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrowred"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/simbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Symbol]"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/simbol"
        android:layout_marginLeft="10dp"
        android:text="Money"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/deskripsiCashFlow"
        android:layout_below="@id/simbol"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tanggalCashFlow"
        android:layout_below="@id/deskripsiCashFlow"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Tanggal" />


</RelativeLayout>